{
  "manifest_version": 2,

  "name": "brome",
  "description": "brome",
  "version": "1.0",

  "icons": { "128": "icon.png" },

  "background": {
    "persistent": false,
    "scripts": ["background.js", "navigator.js"]
  },

  "permissions": [
    "alarms",
    "tabs",
    "storage",
    "webNavigation",
    "http://www.bing.com/",
    "https://login.live.com/",
    "https://account.live.com/"
  ],
  "browser_action": {
    "default_title": "brome",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
